{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src", "../xOld/Setting.d.ts", "../xOld/Settings.d.ts", "../xOld/UserOld.d.ts", "../xOld/preferences", "../xOld/UserProfile.d.ts", "../xOld/agent/Agent.d copy.ts", "../xOld/agent/Role.d copy.ts", "../xOld/userAgent"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
